<h1>New User</h1>

<% if @user.errors.any?  %>
  <ul>
    <% @user.errors.full_messages.each do |m| %>
    <li><%= m %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@user) do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
